# ============================================
# LLM Configuration (Groq)
# ============================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=moonshotai/kimi-k2-instruct-0905
GROQ_TEMPERATURE=0.1
GROQ_MAX_TOKENS=1024
GROQ_TOP_P=0.8

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=ProjectManagement

# ============================================
# Qdrant Configuration (for RAG)
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=project_management_docs

# ============================================
# Mem0 Memory Management Configuration
# ============================================
# Enable/disable Mem0 (set to 'false' to use basic ConversationMemory)
USE_MEM0=true

# Mem0 Qdrant Configuration
# Use the same Qdrant instance as RAG, or configure a separate one
MEM0_QDRANT_HOST=localhost
MEM0_QDRANT_PORT=6333
# Optional: Use embedded Qdrant (file-based storage)
# MEM0_QDRANT_PATH=./qdrant_mem0_data

# Mem0 LLM Provider (uses Groq by default)
MEM0_LLM_PROVIDER=groq
# Note: GROQ_API_KEY from above is reused for Mem0

# Mem0 Embedding Model
# Default: sentence-transformers/all-MiniLM-L6-v2 (384 dimensions)
MEM0_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================
# Phoenix Tracing Configuration
# ============================================
PHOENIX_HOST=localhost
PHOENIX_PORT=6006

# ============================================
# Application Configuration
# ============================================
STREAM_TOOL_OUTPUTS=false
