FROM mem0/mem0-api-server:latest

# Install additional dependencies for Groq and HuggingFace embeddings support
RUN pip install --no-cache-dir groq sentence-transformers

# Copy custom main.py
COPY mem0_custom_main.py /app/main.py

WORKDIR /app

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

