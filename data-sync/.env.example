# Core infrastructure endpoints
MONGODB_URI=mongodb://username:password@mongo-host:27017/?authSource=admin&replicaSet=rs0
MONGODB_DATABASE=ProjectManagement

# Kafka bootstrap for MongoDB connector + consumer
KAFKA_BOOTSTRAP_SERVERS=kafka-broker:9092
KAFKA_TOPIC=ProjectManagement\..*
KAFKA_TOPIC_PREFIX=ProjectManagement.
KAFKA_GROUP_ID=qdrant-consumer

# Qdrant endpoint and credentials
QDRANT_URL=https://your-qdrant-host:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=ProjectManagement

# Embedding model configuration
EMBEDDING_MODEL=google/embeddinggemma-300m
FALLBACK_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Hugging Face token (optional, required only for gated models)
HuggingFace_API_KEY=

# Consumer batching + logging
LOG_LEVEL=INFO
BATCH_MAX_MESSAGES=256
BATCH_MAX_SECONDS=2

# Backfill configuration (optional overrides at runtime)
#BACKFILL_MONGO_BATCH=200
#BACKFILL_QDRANT_BATCH=64
