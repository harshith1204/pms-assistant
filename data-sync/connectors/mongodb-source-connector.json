{
  "name": "mongodb-source-connector",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSourceConnector",
      "connection.uri": "mongodb://mongo:27017/ProjectManagement?authSource=admin",
    "database": "ProjectManagement",
    "change.stream.full.document": "updateLookup",
    "publish.full.document.only": "true",
      "pipeline": "[{\"$match\": {\"ns.coll\": {\"$in\": [\"epic\", \"features\", \"cycle\", \"module\", \"project\", \"members\", \"workItem\", \"userStory\", \"page\"]}}}]",
      "copy.existing.pipeline": "[{\"$match\": {\"ns.coll\": {\"$in\": [\"epic\", \"features\", \"cycle\", \"module\", \"project\", \"members\", \"workItem\", \"userStory\", \"page\"]}}}]",
    "copy.existing": "true",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}